##   pin setter ###############
def pin_change():
  while True:
    try:
      pin=int(input("enter a four digit pin:\n"))
    except:
      print("enter a 4 digit number")
      continue
    try:
      pin2=int(input("enter the same pin:\n"))
    except:
      print("enter a 4 digit number")
      continue
    if pin != pin2:
      print("both pins don't match")
      continue
    pin_accept=users[online_user].signup_pin_check(pin)
    if pin_accept==2:
      print("more or less than 4 digits.")
      continue
    elif pin_accept==1:
      break
  return pin


### card checker#############
def card_checker():
  attempts = 3
  while True:
    print("Enter the last 4 digits of your card")
    try:
      card=int(input())
    except:
      print("not a number")
      continue
    if attempts != 0:
      card_accept=users[online_user].card_check(card)
      if card_accept == "non_4":
        print("entred is not a 4 digit number")
      elif card_accept == "card_match":
        print("card Accepted")
        break
      elif card_accept == "not_matched":
        print("wrong card try again")
        attempts -= 1
      else:
        print("error")
        break
    elif attempts == 0:
      print("too many invalid attemts")
      return "invalid"



