#signup page                                                                     
def signup():
  print("welcome to signup.")
  time.sleep(0.5)
  id_exist=1
  pin_accept=2
  print("please enter a unique user name to continue.")

  while id_exist==1:
    id=input("enter ID:\n").strip().lower().replace(" ","")
    id_exist=customers.signup_id_check(id)
    if id_exist == 1:
      print("ID already taken try a diffrent id")
      continue
    else:
      break

  fullname=input("please enter your full name:\n").strip()
  password=input("please enter a passwordk\n").strip()

  pin = pin_generator()
  card=card_generator()
  print(f"your pin is {pin}")
  print(f"your card is {card}")
  print("remember you pin and last 4 digits of card")
  bank=bank_selector()
  if bank == "null":
    print(" cannot have no bank.")
    return
  balance=0
  users[id]=customers(fullname,id,password,pin,card,bank,balance)
  # print(users[id].fullname)
