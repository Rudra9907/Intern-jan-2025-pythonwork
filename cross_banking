def cb_withdraw():
  a= users[online_user].withdraw_limit_check()
  if a== "can_withdraw":
    pass
  elif a == "max_withdraw":
    return "max_withdrawl"
  while True:
    print("choosa a bank")
    bank=bank_selector()
    if bank == users[online_user].bank:
      print("you cannot use your own bank.")
    elif bank == "null":
      return "null"
    else:
      print(f"{banks[bank]} has been selected")
      break
  diff_bank()

