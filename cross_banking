## cross banking
def cross_banking():
  while True:
    print("============Cross banking=============")
    print("1. withdraw\n2. deposit\n3. Back")
    print("======================================")
    choice = input()
    match choice:
      case "1":
        cb_withdraw()
      case "2":
        cb_deposit()
      case "3":
        return "hollow"
      case _:
        print("enter 1 for withdrawl, 2 for deposit and 3 to go back")


